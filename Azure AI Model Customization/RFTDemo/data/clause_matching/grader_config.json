{
    "name": "clause_match_grader",
    "type": "multi",
    "graders": {
        "extracted_text_similarity": {
            "name": "extracted_text_similarity",
            "type": "text_similarity",
            "input": "{{sample.output_json.extracted_text}}",
            "reference": "{{item.reference_answer.extracted_text}}",
            "evaluation_metric": "fuzzy_match"
        },
        "clause_string_check": {
            "name": "clause_string_check",
            "type": "string_check",
            "input": "{{sample.output_json.clause_type}}",
            "operation": "eq",
            "reference": "{{item.reference_answer.clause_type}}"
        }
    },
    "calculate_output": "0.5 * extracted_text_similarity + 0.5 * clause_string_check"
}